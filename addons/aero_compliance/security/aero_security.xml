<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Module Category -->
    <record id="module_category_aero" model="ir.module.category">
        <field name="name">Aero Compliance</field>
        <field name="sequence">25</field>
    </record>

    <!-- Groups -->
    <record id="group_aero_user" model="res.groups">
        <field name="name">Aero User</field>
        <field name="category_id" ref="module_category_aero"/>
    </record>

    <record id="group_aero_manager" model="res.groups">
        <field name="name">Aero Manager</field>
        <field name="category_id" ref="module_category_aero"/>
        <field name="implied_ids" eval="[(4, ref('group_aero_user'))]"/>
    </record>

    <record id="group_aero_admin" model="res.groups">
        <field name="name">Aero Admin</field>
        <field name="category_id" ref="module_category_aero"/>
        <field name="implied_ids" eval="[(4, ref('group_aero_manager'))]"/>
    </record>
</odoo>
